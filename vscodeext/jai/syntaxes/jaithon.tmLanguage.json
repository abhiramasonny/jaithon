{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "jaithon",
	"patterns": [
	  {
		"include": "#keywords"
	  },
	  {
		"include": "#comments"
	  },
	  {
		"include": "#variables"
	  },
	  {
		"include": "#trigFunctions"
	  },
	  {
		"include": "#timeFunction"
	  },
	  {
		"include": "#operators"
	  },
	  {
		"include": "#integers"
	  }
	],
	"repository": {
	  "keywords": {
		"patterns": [
		  {
			"name": "keyword.control.jaithon",
			"match": "\\b(if|then|do|import|input|var|array|print|time)\\b"
		  }
		]
	  },
	  "comments": {
		"name": "comment.line.jaithon",
		"match": "\\#.*$"
	  },
	  "variables": {
		"name": "variable.jaithon",
		"match": "\\b[a-zA-Z_][a-zA-Z0-9_]*\\b"
	  },
	  "trigFunctions": {
		"patterns": [
		  {
			"name": "support.function.trig.jaithon",
			"match": "\\b(sin|cos|tan|asin|acos|atan|sqrt)\\b",
			"settings": {
			  "foreground": "#800000"
			}
		  }
		]
	  },
	  "timeFunction": {
		"patterns": [
		  {
			"name": "support.function.time.jaithon",
			"match": "\\btime\\s*\\(\\s*\\)\\b",
			"settings": {
			  "foreground": "#008000"
			}
		  }
		]
	  },
	  "operators": {
		"patterns": [
		  {
			"name": "keyword.operator.jaithon",
			"match": "[+\\-*/=<>]",
			"settings": {
			  "foreground": "#00BFFF"
			}
		  }
		]
	  },
	  "integers": {
		"name": "constant.numeric.jaithon",
		"match": "\\b\\d+\\b"
	  }
	},
	"scopeName": "source.jai"
  }
  